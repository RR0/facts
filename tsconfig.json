{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "module": "ES2015",
    "target": "ES2015",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "ES2015"
    ],
    "outDir": "./dist/",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./*",
        "src/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
